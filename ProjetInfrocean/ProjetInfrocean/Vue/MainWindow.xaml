<Window x:Class="ProjetInfrocean.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjetInfrocean"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_New" />
                <MenuItem Header="_Open" />
                <MenuItem Header="_Save" />
                <Separator />
                <MenuItem Header="_Exit" />
            </MenuItem>
            <MenuItem Header="_Options">
                <MenuItem Header="_Blue"  Click="BClick" />
                <MenuItem Header="_Red" Click="RClick" />
                <MenuItem Header="_Green" Click="VClick"/>
            </MenuItem>
        </Menu>
        <TextBox AcceptsReturn="True" />
        <StackPanel >

            <TabControl Margin="0,0,0,0" Height="394">
                <TabItem Header="Ajouter une personne">
                    <Grid Name ="gridAjoutPersonne" Height="300" Margin="0,0,0.300,0" VerticalAlignment="Top">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="27*"/>
                            <ColumnDefinition Width="233*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.ColumnSpan="2" Margin="0,0,-0.3,0">

                            <Label Content="Nom"></Label>
                            <!--            <TextBox Name="nomTextBox" TextChanged="nomChanged"/> -->
                            <TextBox Name="nom" Height="20"/>
                            <Label Content="Prénom"></Label>
                            <!-- <TextBox Name="prenomTextBox" TextChanged="prenomChanged"/> -->
                            <TextBox Name="prenom" Height="20" Margin="0,0,0.300,0" />
                            <Button x:Name="nomPrenomButton" Content="Créer" BorderBrush="#FF545454" BorderThickness="5,5,5,1" Height="35" Margin="0,5,206.333,0" HorizontalAlignment="Right" Width="200" RenderTransformOrigin="0.5,2.31" Click="nomPrenomButton_Click" >

                            </Button>
                        </StackPanel>
                    </Grid>
                </TabItem>
                <TabItem Header="Ajouter une étude">
                    <Grid Name ="gridAjoutEtude" Height="300" Margin="0,0,0.300,0" VerticalAlignment="Top">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="27*"/>
                            <ColumnDefinition Width="233*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.ColumnSpan="2" Margin="0,0,-0.3,0">

                            <Label Content="Titre"></Label>
                            <TextBox Name="titre" Height="20"/>
                            
                            <Label Content="Date Création"></Label>
                            <TextBox Name="dateCrea" Height="20" Margin="0,0,0.300,0" />
                            
                            <Label Content="Date de Fin"></Label>
                            <TextBox Name="dateFin" Height="20" Margin="0,0,0.300,0" />
                            <Button x:Name="ajoutEtudeButton" Content="Créer" BorderBrush="#FF545454" BorderThickness="5,5,5,1" Height="35" Margin="0,5,206.333,0" HorizontalAlignment="Right" Width="200" RenderTransformOrigin="0.5,2.31" Click="ajoutEtudeButton_Click" >

                            </Button>
                        </StackPanel>
                    </Grid>
                </TabItem>
                <TabItem Header="Liste des Etudes">
                    <StackPanel>
                        <Grid Margin="10">
                            <DataGrid Name="listeEtudes" ItemsSource="{Binding}" AutoGenerateColumns="false" HorizontalAlignment="Left" Margin="200,0"  Grid.ColumnSpan="2" BorderBrush="Black" Background="#FFA4A4A4" SelectionChanged="listeEtudes_SelectionChanged">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="id" Binding="{Binding idEtudeProperty, Mode=OneWay}" />
                                    <DataGridTextColumn Header="titre" Binding="{Binding titreEtudeProperty}" />
                                    <DataGridTextColumn Header="dateCrea" Binding="{Binding dateCreationEtudeProperty}" />
                                    <DataGridTextColumn Header="dateFin" Binding="{Binding dateFinEtudeProperty}" />
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                        <Button x:Name="supprimerButton" Content="Supprimer" MouseDoubleClick="supprimerButton_MouseDoubleClick" BorderBrush="#FF545454" BorderThickness="5,5,5,1" Height="35" Width="200">
                            <Button.Background>
                                <RadialGradientBrush>
                                    <GradientStop Color="#FFF26A66" Offset="0.279"/>
                                    <GradientStop Color="#FFFFE10A" Offset="0.779"/>
                                    <GradientStop Color="#FFD3B220" Offset="0.986"/>
                                </RadialGradientBrush>
                            </Button.Background>
                        </Button>
                    </StackPanel>
                </TabItem>

                <TabItem Header="Liste des Personnes">
                    <StackPanel>
                        <Grid Margin="10">
                            <DataGrid Name="listePersonnes" ItemsSource="{Binding}" AutoGenerateColumns="false" HorizontalAlignment="Left" Margin="200,0"  Grid.ColumnSpan="2" BorderBrush="Black" Background="#FFA4A4A4" SelectionChanged="listePersonnes_SelectionChanged">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="id" Binding="{Binding idPersonneProperty, Mode=OneWay}" />
                                    <DataGridTextColumn Header="nom" Binding="{Binding nomPersonneProperty}" />
                                    <DataGridTextColumn Header="prénom" Binding="{Binding prenomPersonneProperty, Mode=TwoWay}" />
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                        
                    </StackPanel>
                </TabItem>
                <TabItem Header="Liste des Plages">
                    <StackPanel>
                        <Grid Margin="10">
                            <DataGrid Name="listePlages" ItemsSource="{Binding}" AutoGenerateColumns="false" HorizontalAlignment="Left" Margin="200,0"  Grid.ColumnSpan="2" BorderBrush="Black" Background="#FFA4A4A4" SelectionChanged="listePlages_SelectionChanged">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="id" Binding="{Binding idPlageProperty, Mode=OneWay}" />
                                    <DataGridTextColumn Header="nom" Binding="{Binding nomPlageProperty}" />
                                    <DataGridTextColumn Header="departement" Binding="{Binding departementPlageProperty, Mode=TwoWay}" />
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>

                    </StackPanel>
                </TabItem>

            </TabControl>
        </StackPanel>
    </DockPanel>

</Window>
